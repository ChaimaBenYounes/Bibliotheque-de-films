{%  extends 'base.html.twig' %}
{%  block body %}
	<div class="row">
	<h1> ID - {{ member.id }}</h1>
		<div class="col-xs-2">
			<img src="{{ asset(member.photo)}}" class="img-responsive img-circle" />
		</div>
		<div class="col-xs-10">
			<p><strong class="text-uppercase">First name :</strong>{{ member.nom }}</p>
			<p><strong class="text-uppercase">Last name :</strong> {{ member.prenom }}</p>
			<p><strong class="text-uppercase">Email :</strong> <a href="mailto:{{member.email}}">{{member.email}}</a></p>
		</div>
	</div>
	<div class="row">
		<a href="{{ path('shows-all-members') }}" class="btn btn-primary">Back</a>
	</div>
{% endblock %}
