{%  extends 'base.html.twig' %}
{%  block body %}
	{% if members is defined %}
		<h1>Members</h1>
		<table class="table table-striped">
			<tr>
				<th>First name</th>
				<th>Last name</th>
				<th></th>
			</tr>

			{% for member in members %}
			<tr>
				<td>{{ member.nom }}</td>
				<td>{{ member.prenom }}</td>
				<td><a href="{{ path('shows-member', {'id': member.id }) }}" class="btn btn-primary">Details</a></td>
			</tr>
			{% endfor %}
					
		</table>
	{% endif %}	

{% endblock %}
				